{
	"$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
	"code-block-style": {
		"style": "fenced"
	},
	"code-fence-style": {
		"style": "backtick"
	},
	"emphasis-style": {
		"style": "underscore"
	},
	"first-line-heading": true,
	"heading-style": {
		"style": "atx"
	},
	"hr-style": {
		"style": "consistent"
	},
	"line-length": false,
	"list-marker-space": {
		"ol_multi": 1,
		"ol_single": 1,
		"ul_multi": 1,
		"ul_single": 1
	},
	"no-hard-tabs": {
		"code_blocks": false,
		"spaces_per_tab": 4
	},
	"no-trailing-spaces": {
		"br_spaces": 0,
		"strict": true
	},
	"ol-prefix": {
		"style": "ordered"
	},
	"single-title": true,
	"strong-style": {
		"style": "asterisk"
	},
	"table-pipe-style": {
		"style": "leading_and_trailing"
	},
	"ul-indent": {
		"indent": 4
	},
	"ul-style": {
		"style": "sublist"
	}
}
